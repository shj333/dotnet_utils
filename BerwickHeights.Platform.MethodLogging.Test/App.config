<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <!-- Use Castle Windsor as IoC container -->
    <add key="IoCContainerType" value="BerwickHeights.Platform.IoC.Castle.CastleContainerManager, BerwickHeights.Platform.IoC.Castle" />

    <!-- Configuration based in Redis server -->
    <add key="RedisNetAddr" value="jarrett:6379" />
  </appSettings>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Castle.Core" publicKeyToken="407dd0808d44fbdc" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.3.0.0" newVersion="3.3.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>