<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- Use Castle Windsor as IoC container -->
    <add key="IoCContainerType" value="BerwickHeights.Platform.IoC.Castle.CastleContainerManager, BerwickHeights.Platform.IoC.Castle" />

    <!-- Configuration based in Redis server -->
    <add key="RedisNetAddr" value="evans:6379" />
  </appSettings>
  <connectionStrings>
    <add name="TestDatabase" connectionString="Database=BHS.UnitTests;Data Source=localhost\caliperdb;Integrated Security=SSPI" />
  </connectionStrings>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="NHibernate" culture="neutral" publicKeyToken="aa95f207798dfdb4" />
        <bindingRedirect newVersion="3.3.0.4000" oldVersion="0.0.0.0-3.3.0.4000" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>